					    var tlo:TileLayerOverlay = new TileLayerOverlay(rasterLayer);
					    map.addOverlay(tlo); */
				    }
			    ]]>
			</mx:Script>
			
			<mx:VBox verticalGap="0" height="100%" width="100%">
