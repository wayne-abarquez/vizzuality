<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
<Document>
{foreach key=id item=run from=$runs}
  <Placemark>
    <name>{$run.name}</name>
    <description><![CDATA[<a href="/run/{$run.id}/{$run.name|seourl}">{$run.name} - {$run.event_location} - {$run.distance_text} - {$run.event_date}</a>]]></description>
    <Point>
      <coordinates>{$run.lon},{$run.lat},0</coordinates>
    </Point>
  </Placemark>
{/foreach}
</Document>
</kml>