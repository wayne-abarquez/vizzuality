<!--- This component contains all the content components
	-Dashboard
	-DataDownload
	-DataUpload
-->

<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" backgroundColor="#FFFFFF" xmlns:dashboard="org.vizzuality.view.content.dashboard.*" width="874" xmlns:ns1="org.vizzuality.view.*" xmlns:components="org.vizzuality.components.*">
	<mx:Script>
		<![CDATA[
			import resource.*;
		]]>
	</mx:Script>
	<mx:ViewStack x="0" y="31" id="myViewStack" width="874" height="555">
		<mx:Canvas label="DASHBOARD" backgroundColor="#FEFEFE" id="mydashboard">
			<mx:VBox backgroundColor="#FEFEFE" right="10" left="10" top="315">
				<dashboard:ContainersInfo title="You have 3 unfinished data uploads" 
										  expl="If you have finished your edits on any of this datasets, " height="59" 
										  expl2="please upload it" 
										  imgsource="{Resource.UNFINISHED}"
										  textButton="Upload Now" borderColor="#D9D9D9"/>
				<dashboard:ContainersInfo title="Download new data" 
										  expl="Modify your data with your own editor" height="59" 
										  expl2="please upload it" 
										  imgsource="{Resource.NEWDATA}"
										  textButton="Download new" borderColor="#D9D9D9"/>
				<mx:Canvas width="100%" height="102" backgroundColor="#f5f5f5" borderStyle="solid" cornerRadius="4" borderColor="#D9D9D9">
					<mx:Image x="10" y="10" source="{Resource.SUGGEST}"/>
					<components:LinkLabel x="58" text="We suggest you to..." color="#414141" fontWeight="bold" fontSize="15" top="18" fontFamily="Helvetica" url="http://www.vizzuality.com"
						default_color="0x414141" default_hover_color="0x333333" default_hover_decoration="none" text_decoration="none" default_weight="bold" default_hover_weight="bold"/>
					<components:LinkLabel x="78" text="Download all the PA’s in UK" color="#336699" fontWeight="bold" fontSize="14" top="38" fontFamily="Helvetica" url="http://www.vizzuality.com"
						default_color="0x336699" default_hover_color="0x003366" default_hover_decoration="none" text_decoration="none" default_weight="bold" default_hover_weight="bold"/>
					<components:LinkLabel x="78" text="Download all the PA’s in USA" color="#336699" fontWeight="bold" fontSize="14" top="54" fontFamily="Helvetica" url="http://www.vizzuality.com"
						default_color="0x336699" default_hover_color="0x003366" default_hover_decoration="none" text_decoration="none" default_weight="bold" default_hover_weight="bold"/>
					<components:LinkLabel x="78" text="Download Any England Protected Area data" color="#336699" fontWeight="bold" fontSize="14" top="70" fontFamily="Helvetica" url="http://www.vizzuality.com"
						default_color="0x336699" default_hover_color="0x003366" default_hover_decoration="none" text_decoration="none" default_weight="bold" default_hover_weight="bold"/>
				</mx:Canvas>
			</mx:VBox>
			<mx:Canvas height="300" backgroundColor="#EBEBEB" right="0" left="0" top="0">
				<mx:Canvas height="194" left="15" right="15" backgroundColor="#F5F5F5" borderColor="#c6c6c6" borderStyle="solid" borderThickness="1" bottom="15">
					<mx:Text height="76" color="#666666" fontSize="14" fontFamily="Helvetica" top="15" left="15" right="45">
					    <mx:htmlText>
						<![CDATA[Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ut quam ligula, et elementum nisl. Nunc a erat eu sem suscipit auctor. Nam aliquam enim vitae mi hendrerit imperdiet. Morbi massa orci, lobortis sed tempor id, convallis at tortor. Cras ipsum diam, tincidunt eu mattis tristique, <b>consectetur vitae risus.</b> Nam interdum orci odio. Nulla tincidunt mi vel tellus dapibus rhoncus. Vestibulum nec euismod risus
            			]]>
						</mx:htmlText>
					</mx:Text>
					<mx:HBox bottom="15" right="15" left="15">
						<dashboard:StepContainer num="1" expl="Download the data that you will modify" height="59" imgsource="{Resource.STEP1}"/>
						<dashboard:StepContainer num="2" expl="Modify your data with your own editor" height="59" imgsource="{Resource.STEP2}"/>
						<dashboard:StepContainer num="3" expl="Upload your modified data&#xd;and commit your changes" height="59" imgsource="{Resource.STEP3}"/>
					</mx:HBox>
					<mx:Button label="x" width="31" right="6" top="6"/>
				</mx:Canvas>
				<mx:Label text="Welcome back wwf.org!" styleName="welcome" left="15" top="30" color="#666666"/>
			</mx:Canvas>
		</mx:Canvas>
		<mx:Canvas label="DOWNLOAD DATA" width="874" height="100%" backgroundColor="#FCB561" id="download_data">
			<mx:VBox x="651" y="58" width="169" height="375" backgroundColor="#413131">
				<mx:Canvas width="170" height="33" backgroundColor="#FCF9D1">
					<mx:Label x="10" y="10" text="Current dataset" width="150"/>
				</mx:Canvas>
				<mx:Button label="download all"/>
			</mx:VBox>
			<ns1:DownloadData top="0" left="0" right="0" height="100%">
			</ns1:DownloadData>
		</mx:Canvas>
		<mx:Canvas label="PREVIOUS DOWNLOADS" width="874" height="100%" backgroundColor="#8FFA55" id="previous_downloads">
			<ns1:PreviousDownloadsDiff left="0" top="0">
			</ns1:PreviousDownloadsDiff>
		</mx:Canvas>
		<mx:Canvas label="PREVIOUS UPLOADS" width="100%" height="100%" backgroundColor="#A98E8E" id="previous_uploads">
		</mx:Canvas>
	</mx:ViewStack>
	<mx:HBox left="0" top="0">
		<mx:Button label="DASHBOARD" click="myViewStack.selectedChild=mydashboard;"/>
		<mx:Button label="DOWNLOAD DATA" click="myViewStack.selectedChild=download_data;"/>
		<mx:Button label="PREVIOUS DOWNLOADS" click="myViewStack.selectedChild=previous_downloads;"/>
		<mx:Button label="PREVIOUS UPLOADS" click="myViewStack.selectedChild=previous_uploads;"/>
	</mx:HBox>
	
</mx:Canvas>
