<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="105" styleName="headerCanvas"
	verticalScrollPolicy="off" horizontalScrollPolicy="off" creationComplete="init()">
	<mx:states>
		<mx:State name="with_header">
			<mx:AddChild position="lastChild">
				<mx:Image source="@Embed('/com/vizzuality/style/assets/logo.jpg')" left="3" top="5"/>
			</mx:AddChild>
			<mx:SetProperty name="height" value="86"/>
		</mx:State>
	</mx:states>
	<mx:Script>
		<![CDATA[
			import mx.core.Application;
			
			private function init():void {
				if(Application.application.parameters.hide_header=='true') {
					currentState='';
				} else {
					currentState='with_header';
					
				}	
			}
		]]>
	</mx:Script>
	<mx:Image left="0" top="0" source="@Embed('/assets/header/bkg.jpg')"/>
	<mx:Image top="0" source="@Embed('/assets/header/map.png')" horizontalCenter="0"/>
	<mx:Label text="GLOBAL REGISTRY OF MIGRATORY SPECIES" fontFamily="DINOT-Medium" fontSize="12" color="#FFFFFF" left="14" bottom="1" height="26"/>
	<mx:HRule strokeWidth="1" strokeColor="#FFFFFF" bottom="29" right="16" width="121"/>
	<mx:Label text="GROMS" fontFamily="DINOT-Bold" fontSize="40" color="#FFFFFF" letterSpacing="-3" left="10" bottom="24"/>
	<mx:Label text="http://www.groms.de" fontFamily="DINOT-Medium" fontSize="12" color="#FFB400" bottom="1" height="26" right="12"/>
	<mx:Image source="@Embed('/assets/header/dottedLine.png')" left="30" scaleContent="false" right="30" bottom="29"/>
	<mx:HRule strokeWidth="1" strokeColor="#FFFFFF" left="16" bottom="29" width="116"/>
	<!--TODO METER EL BOTON-->
	<!--<mx:Button label="Full" right="10" top="10" click="Application.application.toggleFullScreen();"/>-->
	
</mx:Canvas>
