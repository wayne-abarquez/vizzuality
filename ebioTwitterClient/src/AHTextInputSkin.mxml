<?xml version="1.0" encoding="utf-8"?>
<!--
    Andy Hulstkamp AH
    Skin for enhanced TextInput
    Version 0.1
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
      alpha.disabled="0.5">

    <fx:Metadata>
        [HostComponent("AHTextInput")]
    </fx:Metadata> 
 
    
    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>
    
    
    <!-- background --> 
    <s:Rect blendMode="normal" left="1" right="1" top="1" bottom="1" radiusX="6" radiusY="6" alpha="1">
         <s:fill >
            <s:SolidColor id="bgFill" color="white" />
        </s:fill>
    </s:Rect>
    
    <!-- text. To do: Get Properties from Component -->
    <s:RichEditableText id="textView"  verticalAlign="middle" heightInLines="1"
              left="3" right="1" top="1" bottom="1" 
              paddingLeft="3" paddingTop="5"
              paddingRight="40" paddingBottom="3"/>

</s:SparkSkin>
