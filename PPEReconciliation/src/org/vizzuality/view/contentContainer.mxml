            			]]>
						</mx:htmlText>
					</mx:Text>
					<mx:HBox bottom="15" right="15" left="15">
						<dashboard:StepContainer num="1" expl="Download the data that you will modify" height="59" imgsource="{Resource.STEP1}"/>
						<dashboard:StepContainer num="2" expl="Modify your data with your own editor" height="59" imgsource="{Resource.STEP2}"/>
						<dashboard:StepContainer num="3" expl="Upload your modified data&#xd;and commit your changes" height="59" imgsource="{Resource.STEP3}"/>
					</mx:HBox>
					<mx:Button label="x" width="31" right="6" top="6" styleName="close"/>
				</mx:Canvas>
				<mx:Label text="Welcome back wwf.org!" styleName="welcome" left="15" top="20" color="#666666"/>
			</mx:Canvas>
		</mx:Canvas>
		<mx:Canvas label="DOWNLOAD DATA" width="874" height="100%" backgroundColor="#FCB561" id="download_data">
			<mx:VBox x="651" y="58" width="169" height="375" backgroundColor="#413131">
				<mx:Canvas width="170" height="33" backgroundColor="#FCF9D1">
					<mx:Label x="10" y="10" text="Current dataset" width="150"/>
				</mx:Canvas>
				<mx:Button label="download all"/>
			</mx:VBox>
			<ns1:DownloadData top="0" left="0" right="0" height="100%">
			</ns1:DownloadData>
		</mx:Canvas>
		<mx:Canvas label="PREVIOUS DOWNLOADS" width="874" height="100%" backgroundColor="#8FFA55" id="previous_downloads">
			<ns1:PreviousDownloadsDiff left="0" top="0">
			</ns1:PreviousDownloadsDiff>
		</mx:Canvas>
		<mx:Canvas label="PREVIOUS UPLOADS" width="100%" height="100%" backgroundColor="#A98E8E" id="previous_uploads">
		</mx:Canvas>
	</mx:ViewStack>
	<mx:HBox left="0" top="0">
		<mx:Button label="DASHBOARD" click="myViewStack.selectedChild=mydashboard;"/>
		<mx:Button label="DOWNLOAD DATA" click="myViewStack.selectedChild=download_data;"/>
		<mx:Button label="PREVIOUS DOWNLOADS" click="myViewStack.selectedChild=previous_downloads;"/>
		<mx:Button label="PREVIOUS UPLOADS" click="myViewStack.selectedChild=previous_uploads;"/>
	</mx:HBox>
	
</mx:Canvas>
