<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="25"
	verticalScrollPolicy="off" horizontalScrollPolicy="off">
	<mx:Script>
		<![CDATA[
			import mx.core.UITextField;
			import mx.core.UIComponent;
			import com.vizzuality.view.timeline.events.TimelineButtonEvent;
			[Bindable] public var taxon: String = "";
			private var _ev: TimelineButtonEvent;
			public var identity: int;
			
			
 			private function onClickButton(ev: Event):void {							
				switch (ev.target.data as int) {
					case 1:	
						_ev = new TimelineButtonEvent(TimelineButtonEvent.INFORMATION_SPECIE);
						_ev.specieID = identity;
						dispatchEvent(_ev);
						break ;
					case 2:
						_ev = new TimelineButtonEvent(TimelineButtonEvent.INFORMATION_GBIF);
						_ev.specieID = identity;
						dispatchEvent(_ev);
						break ;
					default:
						_ev = new TimelineButtonEvent(TimelineButtonEvent.DELETE_SPECIE);
						_ev.specieID = identity;
						dispatchEvent(_ev);
				}
			}
			
			
			private function onClickVisible(ev: Event):void {
				if (ev.target is UITextField) {
					_ev = new TimelineButtonEvent(TimelineButtonEvent.TIMELINE_VISIBLE);
					_ev.specieID = identity;
					if (this.visCheck.selected) {
						visCheck.selected = false;
						info.enabled = false;
						gbif.enabled = false;
						specie.alpha = 0.3;
						_ev.visible = false;					
					} else {
						info.enabled = true;
						gbif.enabled = true;
						specie.alpha = 1;
						visCheck.selected = true;
						_ev.visible = true;					
					}
					dispatchEvent(_ev);
				} else {
					_ev = new TimelineButtonEvent(TimelineButtonEvent.TIMELINE_VISIBLE);
					_ev.specieID = identity;
					if (this.visCheck.selected) {
						info.enabled = true;
						gbif.enabled = true;
						specie.alpha = 1;
						_ev.visible = true;					
					} else {
						info.enabled = false;
						gbif.enabled = false;
						specie.alpha = 0.3;
						_ev.visible = false;					
					}
					dispatchEvent(_ev);					
				}
			
			}
			
			
		]]>
	</mx:Script>

	<mx:CheckBox id="visCheck" height="19" verticalCenter="0" left="9" selected="true" click="onClickVisible(event)"/>
	<mx:Label id="specie" text="{taxon}" verticalCenter="0" left="20" width="120" color="#333333" fontFamily="DINOT-Medium" fontSize="12" click="onClickVisible(event)"/>
	<mx:Button id="info" width="14" height="14" right="42" verticalCenter="0" styleName="btnInfo" mouseChildren="false" buttonMode="true" useHandCursor="true" data="1" click="onClickButton(event)"/>
	<mx:Button id="del" width="14" height="14" right="10" verticalCenter="0" styleName="btnDelete" mouseChildren="false" buttonMode="true" useHandCursor="true" data="2" click="onClickButton(event)"/>
	<mx:Button id="gbif" width="14" height="14" right="26" verticalCenter="0" styleName="btnGbif" mouseChildren="false" buttonMode="true" useHandCursor="true" data="3" click="onClickButton(event)"/>
	<mx:Image bottom="0" left="8" right="8" scaleContent="false">
		<mx:source>@Embed('/com/vizzuality/style/assets/hRuleDashed500.png')</mx:source>
	</mx:Image>
</mx:Canvas>
